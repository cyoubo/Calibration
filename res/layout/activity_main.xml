<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50B0E2FF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/activity_main_tv_takingphoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#76EE00"
        android:gravity="center"
        android:padding="15px"
        android:text="拍摄影像"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/activity_main_tv_calibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CD853F"
        android:gravity="center"
        android:padding="15px"
        android:text="标定解算"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/activity_main_tv_remap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF7F24"
        android:gravity="center"
        android:padding="15px"
        android:text="图像重采样"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/activity_main_tv_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E90FF"
        android:gravity="center"
        android:padding="15px"
        android:text="结果查看"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

</LinearLayout>