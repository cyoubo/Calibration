<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6E2FF"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="影像名称"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF7F00" />

            <TextView
                android:id="@+id/aphotoscaninfo_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="3px"
                android:text="xxxx.jpg"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#008B00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3px"
                android:text="影像分辨率"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF7F00" />

            <TextView
                android:id="@+id/aphotoscaninfo_tv_resolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="3px"
                android:text="xxxx.jpg"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#008B00" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/aphotoscaninfo_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_photodefault" />

</LinearLayout>