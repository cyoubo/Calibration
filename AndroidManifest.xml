<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.calibration"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />
    
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.calibration.Activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.calibration.Activity.AWaitLoading">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.calibration.Activity.APhontoTaking" android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity android:theme="@android:style/Theme.Holo.Light.Dialog" android:name="com.calibration.Activity.APhotoParamSetting"></activity>
        <activity android:name="com.calibration.Activity.APhotoScan" android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity android:name="com.calibration.Activity.APhotoScanDisplay" android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity android:name="com.calibration.Activity.APhotoPicking" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name="com.calibration.Activity.APhotoFeatureDetect" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name="com.calibration.Activity.APhotoFeatureLocation" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name="com.calibration.Activity.ACalibrationResultDisplay" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
        <activity android:name="com.calibration.Activity.APhotoRemap"></activity>
    </application>

</manifest>
